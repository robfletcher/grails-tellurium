<plugin name='tellurium' version='1.0-SNAPSHOT' grailsVersion='1.2.1 &gt; *'>
  <author>Rob Fletcher</author>
  <authorEmail>rob@energizedwork.com</authorEmail>
  <title>Tellurium Plugin</title>
  <description>\
Integrates the Tellurium testing framework into Grails' functional test phase.
</description>
  <documentation>http://grails.org/plugin/tellurium</documentation>
  <resources>
    <resource>BuildConfig</resource>
  </resources>
  <dependencies>
    <resolvers>
      <resolver type='grailsPlugins' name='grailsPlugins' />
      <resolver type='mavenLocal' />
      <resolver type='mavenCentral' />
      <resolver type='mavenRepo' root='http://snapshots.repository.codehaus.org' name='http://snapshots.repository.codehaus.org' m2compatbile='true' />
      <resolver type='mavenRepo' root='http://repository.codehaus.org' name='http://repository.codehaus.org' m2compatbile='true' />
      <resolver type='mavenRepo' root='http://download.java.net/maven/2/' name='http://download.java.net/maven/2/' m2compatbile='true' />
      <resolver type='mavenRepo' root='http://repository.jboss.com/maven2/' name='http://repository.jboss.com/maven2/' m2compatbile='true' />
      <resolver type='mavenRepo' root='http://maven.kungfuters.org/content/repositories/releases' name='http://maven.kungfuters.org/content/repositories/releases' m2compatbile='true' />
    </resolvers>
    <dependency group='tellurium' name='tellurium-core' version='0.6.0' conf='test' transitive='true'>
      <excludes group='*' name='gmaven-runtime-1.6' />
      <excludes group='*' name='groovy-all' />
    </dependency>
  </dependencies>
  <behavior />
</plugin>